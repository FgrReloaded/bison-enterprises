generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Customer {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  phone     String?
  userType  UserTypes @default(CUSTOMER)
  state     String?
  city      String?
  address   String?
  pincode   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Admin {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  phone     String?
  userType  UserTypes @default(ADMIN)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String
  price       Float
  category    String?
  images      String[]
  stock       Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}


model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}



enum UserTypes {
  ADMIN
  CUSTOMER
}